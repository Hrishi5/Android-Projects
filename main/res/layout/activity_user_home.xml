<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <include
        android:id="@+id/tToolbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        layout="@layout/toolbar_wall_home" />
    <android.support.v7.widget.Toolbar
        android:id="@+id/actionBarUH"
        android:minHeight="?android:attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/unameLabelUH"
                android:text="Username"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:textStyle="bold"/>
            <ImageView
                android:id="@+id/friendsUH"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:src="@mipmap/friends_list"
                android:layout_weight="1"
                android:layout_gravity="center"/>
        </LinearLayout>
    </android.support.v7.widget.Toolbar>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Posts"
        android:textSize="18dp"
        android:textStyle="bold"
        android:padding="5dp"/>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/userHomeRv"
        android:layout_weight="1">
    </android.support.v7.widget.RecyclerView>
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/userHomePostEt"
            android:layout_weight="0.1"
            android:hint="Write a post"
            android:maxLength="200"
            />
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/userHomeSendPostBtn"
            android:src="@mipmap/post"
            android:layout_weight="0.9"
            android:onClick="onClickOfsendPost"
            />
    </LinearLayout>
</LinearLayout>